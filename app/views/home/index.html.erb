<%= form_tag root_path, :method => "POST" do %>
  <%= text_field_tag 'id', nil, placeholder: "Enter Company Ticker Symbol", size: 50 %>
  <%= submit_tag "Lookup Stock Quote" %>
<% end %>
<%= javascript_pack_tag 'hello_react' %>
<br/></br>


<% if @stock %>

  <strong> Company Name: </strong><%= @stock.name %> - <%= @stock.symbol %> </br>
  <strong> Current Ask:  </strong><%= @stock.l %></br>
  <strong> EPS:          </strong><%= @stock.eps %></br>
  <strong> P/E Ratio:    </strong><%= @stock.pe %></br>
  <strong> Market Cap:   </strong><%= @stock.mc %></br>
  <strong> Open:         </strong><%= @stock.op %></br>
  <strong> Day's Range:  </strong><%= @stock.lo %> - <%@stock.hi %></br>
  <strong> Year High:    </strong><%= @stock.hi52 %></br>
  <strong> Year Low:     </strong><%= @stock.lo52 %></br>
  <strong> Website       </strong><%= link_to @stock.summary[0]['url'], @stock.summary[0]['url'] %></br>
  <strong> Summary       </strong><%= @stock.summary %></br>
  <strong> All Info:     </strong><%= @stock.inspect %></br>

<% elsif @nothing %>
  <%= @nothing %>
<% end %>

<% if @error %>
  <%= @error %>
<% end %>
