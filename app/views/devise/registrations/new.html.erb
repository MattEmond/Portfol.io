<%= render "home/navbar" %>

<div class="col-md-6 col-md-offset-3">

  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h3 class="modal-title text-center" id="loginModalLabel">Welcome to Stocky</h3>
        <p class="text-center margin-top-20">Please enter your details</p>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <i class="fa fa-times" aria-hidden="true"></i>
        </button>
      </div>
      <div class="modal-body">
        <div class="panel panel-default">
          <div class="panel-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>

              <div class="form-group">
                <%= f.text_field :first_name, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your first name' %>
                <i class="fa fa-user-plus" aria-hidden="true"></i>

              </div>

              <div class="form-group">
                <%= f.text_field :last_name, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your last name' %>
                <i class="fa fa-user-plus" aria-hidden="true"></i>

              </div>

              <div class="form-group">
                <%= f.text_field :username, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your username' %>
                <i class="fa fa-user-circle-o" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'Please enter your email address' %>
                <i class="fa fa-envelope-o" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <%= f.number_field :age, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your age' %>
                <i class="fa fa-birthday-cake" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <%= f.text_field :country, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your country' %>
                <i class="fa fa-map-marker" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <%= f.number_field :annual_income, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your annual income' %>
                <i class="fa fa-money" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <%= f.text_field :occupation, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your occupation' %>
                <i class="fa fa-briefcase" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <% if @minimum_password_length %>

                <% end %>
                <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Please enter your password' %>
                <i class="fa fa-key" aria-hidden="true"></i>
              </div>

              <div class="form-group">
                <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm your password' %>
                <i class="fa fa-key" aria-hidden="true"></i>
              </div>



              <div class="actions">
                <%= f.submit "REGISTER", class: "btn btn-primary"%>
              </div>
            <% end %>

          </div>
        </div>
        <!-- <%#= render "devise/shared/links" %> -->
      </div>

    </div>
  </div>

</div>
