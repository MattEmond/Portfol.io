<%= form_with(model: stock, local: true) do |form| %>


  <div class="form_group margin-bottom-20">
    <%= form.text_field :ticker, id: :stock_ticker, class: 'form-control', placeholder: 'Ticker' %>
  </div>

  <div class="form_group margin-bottom-20">
    <%= form.number_field :quantity, id: :stock_quantity, class: 'form-control', placeholder: 'Quantity' %>
  </div>

  <div class="form_group margin-bottom-20">
    <%= form.number_field :user_id, value: current_user.id, type: :hidden %>
  </div>

  <div class="actions text-center">
    <%= form.submit "ADD TO PORTFOLIO", class: "btn btn-primary"%>
  </div>
<% end %>
